{
  "name": "@levibostian/action-node-blanky",
  "version": "0.1.0",
  "description": "replace me",
  "scripts": {
    "test": "npx jest",
    "format": "npx prettier --write \"{app,tests}/**/*.ts\"",
    "prepare-action-deploy": "rm -rf node_modules && rm .gitignore && npm install --production",
    "build": "rm -rf dist || true && npx tsc && find dist -type f -name '*.test.js*' -delete && cp package*.json dist/ && cp LICENSE dist/ && cp README.md dist/",
    "lint": "npx eslint --fix --ext ts,js . && npx tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/levibostian/action-node-blanky.git"
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Levi Bostian <levi@levi.earth>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/levibostian/action-node-blanky/issues"
  },
  "homepage": "https://github.com/levibostian/action-node-blanky#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "npm run format"
    ]
  },
  "devDependencies": {
    "@levibostian/eslint-config-node": "^1.0.2",
    "@levibostian/tsconfigs": "^1.0.1",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-plugin-jest": "^24.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@actions/core": "^1.2.6"
  }
}
